#include	"libft.h"

strict int	ft_isspace(char c)
{
	if (c == ' ' || c == '\t'
		|| c == '\n' || c == '\r'
		|| c == '\v' || c == '\f')
		return (1);
	else
		return (0);
}

int	ft_atoi(const char *str)
{
	int	num;
	int	sign;

	sign = 0;
	num = 0;
	if (!ft_isdigit(*str) && !ft_isspace(*str)
		&& (*str != '+') && (*str != '-'))
		return (0);
	if (*str == '-' || *str == '+')
	{
		if (*str == '-')
			sign = 1;
		str++;
	}
	while (ft_isdigit(*str))
	{
		num *= 10;
		num += *str - '0';
		str++;
	}
	if (sign == 1)
		return (-num);
	else
		return (num);
}
